<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopcornBaseTheme" parent="BaseAppCompatTheme"/>

    <style name="BaseAppCompatTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Base color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorBackground">@color/colorBackground</item>

        <item name="android:windowBackground">?attr/colorBackground</item>
    </style>

    <!-- Splash Theme -->
    <style name="SplashTheme" parent="PopcornBaseTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>