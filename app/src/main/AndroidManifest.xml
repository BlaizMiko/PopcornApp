<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.blaizmiko.popcornapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/PopcornBaseTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.home.HomeActivity" />

        <activity android:name=".ui.all.activities.SliderGalleryActivity"/>
        <activity android:name=".ui.all.activities.TrailersActivity"
                  android:screenOrientation="landscape" />

        <activity android:name=".ui.movies.details.BaseDetailsMovieActivity"
            android:theme="@style/PopcornBaseTheme.TransparentStatusBar"/>
        <activity android:name=".ui.tvshows.details.DetailsTvShowActivity"/>

        <activity android:name=".ui.tvshows.seasons.SeasonTvShowTvShowActivity"/>
        <activity android:name=".ui.movies.reviews.ReviewActivity"/>
        <activity android:name=".ui.actors.details.DetailsActorActivity"
                  android:theme="@style/PopcornBaseTheme.TransparentStatusBar"/>

    </application>
</manifest>
