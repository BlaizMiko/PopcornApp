<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_seasons_tv_show"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/spacing_content"
    android:layout_marginEnd="@dimen/spacing_content"
    android:layout_marginLeft="@dimen/spacing_8"
    android:layout_marginStart="@dimen/spacing_8"
    android:background="?attr/colorCardBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/image_view_seasons_tv_shows_poster"
            android:layout_width="@dimen/width_image_tile_vertical"
            android:layout_height="@dimen/height_image_tile_vertical"
            android:layout_margin="@dimen/spacing_1"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_tv_show_season_number_title"
                android:layout_marginRight="@dimen/spacing_content"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"/>

            <TextView
                android:id="@+id/text_view_seasons_tv_shows_season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"
                tools:text="@string/tools_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_tv_show_season_air_date_title"
                android:layout_marginRight="@dimen/spacing_content"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"/>

            <TextView
                android:id="@+id/text_view_seasons_tv_shows_air_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"
                tools:text="@string/tools_text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>