<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/adapter_popular_movie_poster_image_view"
            android:scaleType="centerCrop"
            app:layout_aspectRatio="@dimen/proportions_4_5"
            app:layout_widthPercent="@dimen/proportions_1_1" />
    </android.support.percent.PercentFrameLayout>

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/adapter_popular_movie_title_text_view"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginLeft="@dimen/spacing_4"
            android:layout_marginRight="@dimen/spacing_4"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"
            app:layout_aspectRatio="@dimen/proportions_8_5"
            app:layout_widthPercent="@dimen/proportions_1_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/spacing_4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_popular_movie_avr_vote_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/adapter_popular_movie_avr_vote_rating_bar"
                style="?attr/style.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_4"
                android:numStars="5"
                android:stepSize="0.5" />
        </LinearLayout>

    </android.support.percent.PercentFrameLayout>
</LinearLayout>