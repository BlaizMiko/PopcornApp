<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_8"
            android:paddingLeft="@dimen/spacing_8"
            android:paddingTop="@dimen/spacing_16"
            android:text="@string/movie_fragment_popular_movie_title"
            android:textAppearance="?attr/textAppearance.Title.Primary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_movies_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_content_spacing"
            android:layout_marginLeft="@dimen/default_screen_spacing"
            android:layout_marginRight="@dimen/default_screen_spacing"
            android:layout_marginTop="@dimen/default_screen_spacing"
            android:clipToPadding="false" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_movies_popular_movies_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_screen_spacing"
            android:layout_marginLeft="@dimen/default_screen_spacing"
            android:layout_marginRight="@dimen/default_screen_spacing"
            android:clipToPadding="false"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/fragment_movies_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>