<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/screen_spacing"
                android:layout_marginStart="@dimen/screen_spacing"
                android:layout_marginTop="@dimen/content_spacing"
                android:text="@string/movie_fragment_now_playing_movies_title"
                android:textAppearance="?attr/textAppearance.Body1.Primary"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_movies_now_playing_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tile_horizontal_height"
                android:clipToPadding="false"
                android:paddingEnd="@dimen/content_spacing"
                android:paddingStart="@dimen/content_spacing"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/content_spacing"
                android:layout_marginEnd="@dimen/screen_spacing"
                android:layout_marginStart="@dimen/screen_spacing"
                android:layout_marginTop="@dimen/content_spacing"
                android:text="@string/movie_fragment_popular_movies_title"
                android:textAppearance="?attr/textAppearance.Body1.Primary"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_movies_popular_movies_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingEnd="@dimen/content_spacing"
                android:paddingStart="@dimen/content_spacing"/>

            <Button
                style="@style/Style.Button.Flat"
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/fragment_movies_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</FrameLayout>