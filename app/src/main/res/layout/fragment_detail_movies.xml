<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_movie_details_top_block_size">

            <ImageView
                android:id="@+id/fragment_detail_movie_backdrop_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tile_horizontal_height"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/screen_spacing"
                android:layout_marginRight="@dimen/screen_spacing"
                android:layout_marginTop="@dimen/poster_overlap_backdrop_minus"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="?attr/colorCardBackground">

                    <ImageView
                        android:id="@+id/fragment_detail_movie_poster_image_view"
                        android:layout_width="@dimen/image_tile_vertical_width"
                        android:layout_height="@dimen/image_tile_vertical_height"
                        android:layout_gravity="bottom|left"
                        android:layout_margin="@dimen/spacing_1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/fragment_detail_movie_short_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/poster_overlap_backdrop"
                    android:layout_marginLeft="@dimen/content_spacing"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_detail_movie_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/screen_spacing"
                        android:layout_marginBottom="@dimen/content_spacing"
                        android:textAppearance="?attr/textAppearance.Body2.Primary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_detail_movie_rating_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/content_spacing"
                            android:layout_marginRight="@dimen/content_spacing"
                            android:textAppearance="?attr/textAppearance.Body2.Primary" />

                        <com.iarcuschin.simpleratingbar.SimpleRatingBar
                            android:id="@+id/fragment_detail_movie_rating_bar"
                            style="?attr/style.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srb_isIndicator="true"
                            app:srb_numberOfStars="5"
                            app:srb_rating="3"
                            app:srb_stepSize="0.1" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_detail_movie_genre_tags_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/content_spacing" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/fragment_detail_movie_progress_bar"
            style="?attr/style.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:indeterminate="true"
            android:visibility="visible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_spacing"
            android:layout_marginRight="@dimen/screen_spacing"
            android:layout_marginTop="@dimen/content_spacing"
            android:text="@string/fragment_detail_movie_story_line_title"
            android:textAppearance="?attr/textAppearance.Body1" />

        <TextView
            android:id="@+id/fragment_detail_movie_story_line_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_spacing"
            android:layout_marginRight="@dimen/screen_spacing"
            android:clickable="true"
            android:ellipsize="end"
            android:lines="3"
            android:paddingBottom="@dimen/content_spacing"
            android:paddingTop="@dimen/content_spacing"
            android:textAppearance="?attr/textAppearance.Body1.PrimarySecondary" />
    </LinearLayout>
</ScrollView>
