<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_screen">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_screen">

        <include layout="@layout/layout_details_rating"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:layout_marginBottom="@dimen/spacing_4" >

            <TextView
                android:id="@+id/text_view_info_movie_release_date_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:text="@string/details_release_date_title"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"
                app:layout_constraintBottom_toTopOf="@+id/text_view_info_movie_release_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_view_info_movie_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_4"
                android:textAppearance="?attr/textAppearance.Body1.Primary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/text_view_info_movie_release_date_title"/>

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5"/>

            <TextView
                android:id="@+id/text_view_info_movie_runtime_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:text="@string/details_runtime_title"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"
                app:layout_constraintBottom_toTopOf="@+id/text_view_info_movie_runtime"
                app:layout_constraintLeft_toRightOf="@+id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_view_info_movie_runtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_4"
                android:textAppearance="?attr/textAppearance.Body1.Primary"
                app:layout_constraintLeft_toRightOf="@+id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_info_movie_runtime_title"/>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:layout_marginBottom="@dimen/spacing_4" >

            <TextView
                android:id="@+id/text_view_info_movie_budget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:text="@string/details_budget_title"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"
                app:layout_constraintBottom_toTopOf="@+id/text_view_info_movie_budget"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_view_info_movie_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_4"
                android:textAppearance="?attr/textAppearance.Body1.Primary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/text_view_info_movie_budget_title"/>

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5"/>

            <TextView
                android:id="@+id/text_view_info_movie_revenue_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:text="@string/details_runtime_title"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"
                app:layout_constraintBottom_toTopOf="@+id/text_view_info_movie_revenue"
                app:layout_constraintLeft_toRightOf="@+id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_view_info_movie_revenue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_4"
                android:textAppearance="?attr/textAppearance.Body1.Primary"
                app:layout_constraintLeft_toRightOf="@+id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_info_movie_revenue_title"/>
        </android.support.constraint.ConstraintLayout>

        <include layout="@layout/layout_details_media"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
