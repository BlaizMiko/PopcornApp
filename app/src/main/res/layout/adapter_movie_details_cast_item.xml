<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/spacing_content"
              android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_adapter_movie_details_cast_item_avatar"
        android:layout_width="@dimen/width_image_movie_cast"
        android:layout_height="@dimen/height_image_movie_cast"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_view_adapter_movie_details_cast_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary"/>
</LinearLayout>
