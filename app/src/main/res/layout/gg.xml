<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_adapter_item_spacing"
    android:orientation="vertical">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/adapter_popular_movie_poster_image_view"
            android:scaleType="centerCrop"
            app:layout_aspectRatio="80%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentFrameLayout>

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">

        <FrameLayout
            android:layout_margin="@dimen/default_adapter_item_spacing"
            app:layout_aspectRatio="160%"
            app:layout_widthPercent="100%">

            <TextView
                android:id="@+id/adapter_popular_movie_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/spacing_8"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearance.Caption.PrimarySecondary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_popular_movie_avr_vote_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/adapter_popular_movie_avr_vote_rating_bar"
                    style="?attr/style.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:numStars="5"
                    android:stepSize="0.5" />
            </LinearLayout>


        </FrameLayout>
    </android.support.percent.PercentFrameLayout>
</LinearLayout>
