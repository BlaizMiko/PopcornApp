<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar_gallery"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_screen"
        android:layout_gravity="top|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_gallery_item_current_position"/>

        <TextView
            android:layout_marginLeft="@dimen/spacing_content"
            android:layout_marginRight="@dimen/spacing_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery_item_of_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_gallery_item_total_items"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager_gallery" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/spacing_screen"
        android:layout_marginBottom="@dimen/spacing_screen"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_gallery_item_cinema_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearance.Subheading.Primary"/>

        <TextView
            android:layout_marginTop="@dimen/spacing_content"
            android:id="@+id/text_view_gallery_item_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearance.Body1.Primary"/>
    </LinearLayout>
</FrameLayout>