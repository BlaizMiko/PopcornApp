<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/adapter_popular_actor_item_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_list_two_line"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_base_cast_avatar"
        android:layout_width="@dimen/size_avatar"
        android:layout_height="@dimen/size_avatar"
        android:layout_gravity="start|center"
        android:layout_marginLeft="@dimen/spacing_list"
        android:layout_marginStart="@dimen/spacing_list"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginEnd="@dimen/spacing_list"
        android:layout_marginLeft="@dimen/spacing_list_content_left"
        android:layout_marginRight="@dimen/spacing_list"
        android:layout_marginStart="@dimen/spacing_list_content_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_base_cast_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_content"
            android:textAppearance="?attr/textAppearance.Subheading.Primary"
            tools:text="@string/tools_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/size_icon_small"
                android:layout_height="@dimen/size_icon_small"
                android:contentDescription="@null"
                android:tint="?attr/colorAccent"
                app:srcCompat="@drawable/icon_cast_role"/>

            <TextView
                android:id="@+id/text_view_base_cast_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_content"
                android:layout_marginStart="@dimen/spacing_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearance.Body1.PrimarySecondary"
                tools:text="@string/tools_text"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
